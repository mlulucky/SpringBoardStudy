               COUNT(CASE WHEN l.status='BEST' THEN 1 END) 'best',
               COUNT(CASE WHEN l.status='SAD' THEN 1 END) 'sad'
            FROM board_replies r LEFT JOIN reply_likes l ON r.br_id=l.br_id
            WHERE parent_br_id IS NULL AND b_id=#{bId}
